nav{
    font-family: BankGothic Lt BT, sans-serif;
    font-size:20px;
    text-align:center;
    position: fixed;
    top:0px;
    z-index:100;
    left:0px;
}
#menu div{
    float:left;
    padding:15px;
    width:150px;
    height:30px;
    background-color:#FBFBFB;
    color:#777;
    text-decoration:none;
}
#menu{
    z-index:501;
}
#menubg{ /*menubar bg*/
    background-color:#FBFBFB;
    position:fixed;
    top:0px;
    width:100%;
    left:0px;
    height:60px;
    z-index:500;
}
#menu img{ /*menu logo image*/
    height:60px;
    width:180px;
    position:fixed;
    top:0px;
    left:0px;
}

#menu div:hover{
    color:#FFFFFF;
    background-color:#E0E0E0;
    transition-duration: 0.7s;
}
.container #menu{
    width:1300px;
}

/*******Image slides*******/
.vegas-slide{
    height:600px;
}
.vegas-timer-progress{
    display:none;
}
/*******Text on image slides*******/
.welcomeText{
    position:relative;
    z-index:200;
    top:160px;
    left:25%;
    width:700px;
    font-size:35px;
    color:#FBFBF0;
    font-family:Arial;
    text-shadow:2px 2px 10px grey;    
}


.examples{ /*website examples*/
    display:none;
}


